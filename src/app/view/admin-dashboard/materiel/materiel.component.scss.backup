// Mixins
@mixin card {
  background: white;
  border-radius: $border-radius;
  box-shadow: var(--shadow);
  border: 1px solid var(--border-color);
}

@mixin flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.material-management {
  max-width: 1400px;
  margin: 0 auto;
  padding: 2rem;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
  color: var(--text-primary);
  background: var(--dark-bg);
  min-height: 100vh;

  // En-t√™te
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;

    h1 {
      font-size: 2rem;
      font-weight: 700;
      color: var(--text-primary);
      margin: 0;
      display: flex;
      align-items: center;
      gap: 0.75rem;

      .icon-warehouse::before {
        content: "üè≠";
        font-size: 2rem;
      }
    }

    .header-actions {
      display: flex;
      gap: 1rem;
    }
  }

  // Grille de statistiques
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;

    .stat-card {
      @include card;
      padding: 1.5rem;
      display: flex;
      align-items: center;
      gap: 1rem;
      transition: $transition;

      &:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
      }

      .stat-icon {
        font-size: 2.5rem;
        flex-shrink: 0;
      }

      .stat-content {
        flex: 1;

        .stat-value {
          font-size: 1.75rem;
          font-weight: 700;
          color: $primary-color;
          line-height: 1.2;
        }

        .stat-label {
          font-size: 0.875rem;
          color: var(--text-secondary);
          margin-top: 0.25rem;
        }
      }
    }
  }

  // Onglets
  .tabs {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 2rem;
    background: white;
    padding: 0.5rem;
    border-radius: $border-radius;
    box-shadow: var(--shadow);

    .tab {
      flex: 1;
      padding: 0.875rem 1.5rem;
      border: none;
      background: transparent;
      color: var(--text-secondary);
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      border-radius: calc($border-radius - 2px);
      transition: $transition;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;

      &:hover {
        background: var(--dark-bg);
        color: $primary-color;
      }

      &.active {
        background: $primary-color;
        color: white;
        box-shadow: var(--shadow);
      }

      .icon-box::before {
        content: "üì¶";
      }

      .icon-receipt::before {
        content: "üìÑ";
      }
    }
  }

  // Contenu des onglets
  .tab-content {
    animation: fadeIn 0.3s ease;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  // En-t√™te de contenu
  .content-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
    gap: 1rem;

    h2 {
      font-size: 1.5rem;
      font-weight: 600;
      margin: 0;
    }

    .filters {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      flex: 1;
      max-width: 800px;

      .search-input,
      .filter-select {
        padding: 0.625rem 1rem;
        border: 1px solid var(--border-color);
        border-radius: $border-radius;
        font-size: 0.875rem;
        transition: $transition;

        &:focus {
          outline: none;
          border-color: $primary-color;
          box-shadow: 0 0 0 3px color-mix(in srgb, var(--primary-color) 10%, transparent);
        }
      }

      .search-input {
        flex: 1;
        min-width: 200px;
      }

      .filter-select {
        min-width: 150px;
        background: white;
        cursor: pointer;
      }
    }
  }

  // Boutons
  .btn {
    padding: 0.625rem 1.25rem;
    border: none;
    border-radius: $border-radius;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: $transition;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    white-space: nowrap;

    &.btn-primary {
      background: $primary-color;
      color: white;

      &:hover {
        background: color-mix(in srgb, $primary-color 90%, black);
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
      }
    }

    &.btn-secondary {
      background: var(--secondary);
      color: white;

      &:hover {
        background: color-color-mix(in srgb, in srgb, var(--secondary) 90%, black);
      }
    }

    &.btn-export {
      background: var(--success);
      color: white;

      &:hover {
        background: color-color-mix(in srgb, in srgb, var(--success) 90%, black);
      }
    }

    .icon-plus::before,
    .icon-download::before {
      content: "+";
      font-weight: bold;
    }

    .icon-download::before {
      content: "‚¨á";
    }
  }

  .btn-icon {
    padding: 0.5rem 1rem;
    border: 1px solid var(--border-color);
    background: white;
    border-radius: $border-radius;
    font-size: 0.8125rem;
    cursor: pointer;
    transition: $transition;
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;

    &.btn-edit {
      color: $primary-color;
      border-color: $primary-color;

      &:hover {
        background: $primary-color;
        color: white;
      }

      .icon-edit::before {
        content: "‚úèÔ∏è";
      }
    }

    &.btn-delete {
      color: var(--danger);
      border-color: var(--danger);

      &:hover {
        background: var(--danger);
        color: white;
      }

      .icon-trash::before {
        content: "üóëÔ∏è";
      }
    }
  }

  // Formulaires
  .form-card {
    @include card;
    padding: 2rem;
    margin-bottom: 2rem;
    animation: slideDown 0.3s ease;

    h3 {
      margin: 0 0 1.5rem;
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--text-primary);
    }

    .form-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.25rem;
      margin-bottom: 1.5rem;
    }

    .form-group {
      display: flex;
      flex-direction: column;

      &.full-width {
        grid-column: 1 / -1;
      }

      label {
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
      }

      input,
      select,
      textarea {
        padding: 0.625rem 0.875rem;
        border: 1px solid var(--border-color);
        border-radius: $border-radius;
        font-size: 0.875rem;
        transition: $transition;
        font-family: inherit;

        &:focus {
          outline: none;
          border-color: $primary-color;
          box-shadow: 0 0 0 3px color-mix(in srgb, var(--primary-color) 10%, transparent);
        }
      }

      textarea {
        resize: vertical;
      }

      small {
        font-size: 0.75rem;
        color: var(--text-secondary);
        margin-top: 0.375rem;
      }
    }

    .form-actions {
      display: flex;
      gap: 1rem;
      justify-content: flex-end;
      margin-top: 1.5rem;
    }
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  // Grille de mat√©riel
  .materials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;

    .material-card {
      @include card;
      padding: 1.5rem;
      transition: $transition;

      &:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
      }

      .material-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--border-color);

        h4 {
          margin: 0;
          font-size: 1.125rem;
          font-weight: 600;
          color: var(--text-primary);
          flex: 1;
        }

        .badge {
          padding: 0.25rem 0.75rem;
          border-radius: 9999px;
          font-size: 0.75rem;
          font-weight: 600;
          text-transform: uppercase;
          letter-spacing: 0.025em;

          &.badge-neuf {
            background: #dcfce7;
            color: #166534;
          }

          &.badge-bon {
            background: #dbeafe;
            color: #1e40af;
          }

          &.badge-us√© {
            background: #fef3c7;
            color: #92400e;
          }

          &.badge-√†-remplacer {
            background: #fee2e2;
            color: #991b1b;
          }
        }
      }

      .material-details {
        margin-bottom: 1rem;

        .detail-row {
          display: flex;
          justify-content: space-between;
          padding: 0.5rem 0;
          font-size: 0.875rem;

          &.full-width {
            flex-direction: column;
            gap: 0.25rem;
          }

          .label {
            color: var(--text-secondary);
            font-weight: 500;
          }

          .value {
            color: var(--text-primary);
            text-align: right;

            &.bold {
              font-weight: 600;
              color: $primary-color;
            }
          }
        }
      }

      .material-actions {
        display: flex;
        gap: 0.75rem;
        padding-top: 1rem;
        border-top: 1px solid var(--border-color);
      }
    }
  }

  // Liste des factures
  .invoices-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    .invoice-card {
      @include card;
      padding: 1.5rem;
      transition: $transition;

      &:hover {
        box-shadow: var(--shadow-md);
      }

      .invoice-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 1rem;

        h4 {
          margin: 0 0 0.25rem;
          font-size: 1.125rem;
          font-weight: 600;
          color: var(--text-primary);
        }

        .invoice-supplier {
          margin: 0;
          font-size: 0.875rem;
          color: var(--text-secondary);
        }

        .invoice-amount {
          font-size: 1.5rem;
          font-weight: 700;
          color: var(--success);
        }
      }

      .invoice-details {
        display: flex;
        gap: 2rem;
        margin-bottom: 1rem;
        padding: 1rem;
        background: var(--dark-bg);
        border-radius: calc($border-radius - 2px);

        .detail-item {
          display: flex;
          align-items: center;
          gap: 0.5rem;
          font-size: 0.875rem;
          color: var(--text-secondary);

          .icon-calendar::before {
            content: "üìÖ";
          }

          .icon-file::before {
            content: "üìé";
          }
        }
      }

      .invoice-actions {
        display: flex;
        gap: 0.75rem;
        justify-content: flex-end;
      }
    }
  }

  // √âtat vide
  .empty-state {
    @include flex-center;
    flex-direction: column;
    padding: 4rem 2rem;
    text-align: center;
    grid-column: 1 / -1;

    .empty-icon {
      font-size: 4rem;
      margin-bottom: 1rem;
      opacity: 0.5;
    }

    p {
      color: var(--text-secondary);
      font-size: 1.125rem;
      margin: 0 0 1.5rem;
    }
  }

  // Responsive
  @media (max-width: 768px) {
    padding: 1rem;

    .header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .content-header {
      flex-direction: column;
      align-items: stretch;

      .filters {
        flex-direction: column;
        max-width: 100%;
      }
    }

    .materials-grid {
      grid-template-columns: 1fr;
    }

    .form-card .form-grid {
      grid-template-columns: 1fr;
    }

    .invoice-card .invoice-details {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
}
