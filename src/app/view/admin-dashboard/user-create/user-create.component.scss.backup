// ===== CONTENEUR PRINCIPAL =====
.user-create-container {
  // Padding
  padding: 2rem;
  // Limite de largeur
  max-width: 1400px;
  // Centre
  margin: 0 auto;
  // Fond
  background: var(--dark-bg);
}

// ===== ALERTES =====
.alert {
  // Padding
  padding: 1rem 1.5rem;
  // Coins arrondis
  border-radius: 0.75rem;
  // Espacement bas
  margin-bottom: 1.5rem;
  // Poids de police
  font-weight: 500;
  // Animation
  animation: slideIn 0.3s ease-out;

  // Succès
  &.alert-success {
    background: rgba(var(--success), 0.1);
    border: 1px solid rgba(var(--success), 0.3);
    color: var(--success);
  }

  // Erreur
  &.alert-error {
    background: rgba(var(--danger), 0.1);
    border: 1px solid rgba(var(--danger), 0.3);
    color: var(--danger);
  }

  // Info
  &.alert-info {
    background: rgba(#3b82f6, 0.1);
    border: 1px solid rgba(#3b82f6, 0.3);
    color: #3b82f6;
  }
}

// Animation
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

// ===== EN-TÊTE =====
.section-header {
  // Flexbox
  display: flex;
  // Espacement
  justify-content: space-between;
  // Aligner
  align-items: center;
  // Espacement bas
  margin-bottom: 2rem;

  // Titre
  h2 {
    // Taille
    font-size: 1.75rem;
    // Poids
    font-weight: 700;
    // Couleur
    color: var(--text);
    // Pas de marge
    margin: 0;
  }
}

// ===== CONTENEUR FORMULAIRE =====
.form-container {
  // Fond
  background: var(--card-bg);
  // Bordure
  border: 1px solid var(--border);
  // Coins arrondis
  border-radius: 1rem;
  // Padding
  padding: 2rem;
  // Espacement bas
  margin-bottom: 2rem;
  // Transition
  transition: all 0.3s;

  // Au survol
  &:hover {
    border-color: var(--primary);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  // Formulaire
  form {
    // Flexbox colonne
    display: flex;
    flex-direction: column;
    // Espacement
    gap: 1.5rem;
  }
}

// ===== GROUPE DE FORMULAIRE =====
.form-group {
  // Flexbox colonne
  display: flex;
  flex-direction: column;
  // Espacement
  gap: 0.5rem;
}

// Label
.form-label {
  // Poids
  font-weight: 600;
  // Couleur
  color: var(--text);
  // Taille
  font-size: 0.95rem;
}

// Input et select
.form-input {
  // Padding
  padding: 0.875rem 1rem;
  // Fond
  background: #060918;
  // Bordure
  border: 1px solid var(--border);
  // Coins arrondis
  border-radius: 0.5rem;
  // Couleur
  color: var(--text);
  // Taille de police
  font-size: 0.95rem;
  // Transition
  transition: all 0.3s;
  // Font family
  font-family: inherit;

  // Placeholder
  &::placeholder {
    color: var(--text-muted);
  }

  // Focus
  &:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(var(--primary), 0.1);
    outline: none;
  }

  // Erreur
  &.input-error {
    border-color: var(--danger);
    box-shadow: 0 0 0 3px rgba(var(--danger), 0.1);
  }

  // Options pour select
  option {
    background: var(--dark-bg);
    color: var(--text);
  }
}

// ===== TEXTE D'ERREUR =====
.error-text {
  // Couleur
  color: var(--danger);
  // Taille
  font-size: 0.85rem;
  // Margin négatif
  margin-top: -0.25rem;
}

// Texte info
.info-text {
  // Couleur
  color: var(--text-muted);
  // Taille
  font-size: 0.8rem;
  // Style italic
  font-style: italic;
}

// ===== SECTION AVATARS =====
.avatar-section {
  // Padding
  padding: 1.5rem;
  // Fond
  background: rgba(0, 0, 0, 0.2);
  // Coins arrondis
  border-radius: 0.75rem;

  // Label
  .form-label {
    margin-bottom: 1rem;
  }
}

// Grille d'avatars
.avatar-grid {
  // Grille CSS
  display: grid;
  // Colonnes auto
  grid-template-columns: repeat(auto-fit, minmax(50px, 1fr));
  // Espacement
  gap: 0.75rem;
}

// Bouton avatar
.avatar-btn {
  // Taille
  width: 100%;
  aspect-ratio: 1;
  // Fond
  background: var(--card-bg);
  // Bordure
  border: 2px solid var(--border);
  // Coins arrondis
  border-radius: 0.5rem;
  // Couleur texte
  color: var(--text);
  // Taille de police
  font-size: 2rem;
  // Cursor
  cursor: pointer;
  // Transition
  transition: all 0.3s;

  // Au survol
  &:hover {
    // Bordure
    border-color: var(--primary);
    // Transform
    transform: scale(1.1);
  }

  // Quand sélectionné
  &.selected {
    // Fond
    background: var(--primary);
    // Bordure
    border-color: var(--primary);
    // Ombre
    box-shadow: 0 0 15px rgba(var(--primary), 0.5);
  }
}

// ===== GRILLE 2 COLONNES =====
.form-row {
  // Grille
  display: grid;
  // 2 colonnes
  grid-template-columns: repeat(2, 1fr);
  // Espacement
  gap: 1.5rem;
}

// ===== BOUTONS =====
.btn {
  // Padding
  padding: 0.875rem 1.75rem;
  // Bordure
  border: none;
  // Coins arrondis
  border-radius: 0.75rem;
  // Poids
  font-weight: 600;
  // Cursor
  cursor: pointer;
  // Transition
  transition: all 0.3s;
  // Taille
  font-size: 0.95rem;

  // Survol
  &:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  // Désactivé
  &:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  // Primaire
  &.btn-primary {
    background: var(--primary);
    color: white;

    &:hover:not(:disabled) {
      background: var(--primary-light);
      box-shadow: 0 8px 20px rgba(var(--primary), 0.3);
    }
  }

  // Secondaire
  &.btn-secondary {
    background: var(--card-bg);
    color: var(--text);
    border: 1px solid var(--border);

    &:hover:not(:disabled) {
      background: rgba(var(--text), 0.05);
      border-color: var(--primary);
    }
  }

  // Danger
  &.btn-danger {
    background: rgba(var(--danger), 0.1);
    color: var(--danger);
    border: 1px solid rgba(var(--danger), 0.2);

    &:hover:not(:disabled) {
      background: rgba(var(--danger), 0.2);
      box-shadow: 0 8px 15px rgba(var(--danger), 0.2);
    }
  }

  // Petit
  &.btn-sm {
    padding: 0.5rem 1rem;
    font-size: 0.85rem;
  }
}

// ===== ACTIONS FORMULAIRE =====
.form-actions {
  // Flexbox
  display: flex;
  // Espacement
  gap: 1rem;
  // Alignement
  justify-content: flex-end;
  // Margin top
  margin-top: 1.5rem;
  // Padding top
  padding-top: 1.5rem;
  // Bordure top
  border-top: 1px solid var(--border);
}

// ===== CONTENEUR LISTE =====
.users-list-container {
  // Titre h3
  h3 {
    // Taille
    font-size: 1.5rem;
    // Poids
    font-weight: 700;
    // Couleur
    color: var(--text);
    // Espacement bas
    margin-bottom: 1.5rem;
    // Pas de marge haut
    margin-top: 0;
  }
}

// ===== GRILLE CARTES =====
.users-cards {
  // Grille CSS
  display: grid;
  // Colonnes auto-fill
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  // Espacement
  gap: 1.5rem;
}

// ===== CARTE UTILISATEUR =====
.user-card {
  // Fond
  background: var(--card-bg);
  // Bordure
  border: 1px solid var(--border);
  // Coins arrondis
  border-radius: 1rem;
  // Padding
  padding: 1.5rem;
  // Transition
  transition: all 0.3s;

  // Survol
  &:hover {
    transform: translateY(-5px);
    border-color: var(--primary);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
  }
}

// En-tête carte
.user-card-header {
  // Flexbox
  display: flex;
  // Espacement
  justify-content: space-between;
  // Aligner
  align-items: flex-start;
  // Espacement bas
  margin-bottom: 1.5rem;
  // Padding bas
  padding-bottom: 1.5rem;
  // Bordure bas
  border-bottom: 1px solid var(--border);
}

// Info utilisateur
.user-info {
  // Flexbox
  display: flex;
  // Espacement
  gap: 1rem;
  // Aligner
  align-items: center;

  // Titre h4
  h4 {
    // Taille
    font-size: 1.1rem;
    // Poids
    font-weight: 700;
    // Couleur
    color: var(--text);
    // Pas de marge
    margin: 0;
  }
}

// Avatar grand
.avatar-large {
  // Taille
  width: 50px;
  height: 50px;
  // Cercle
  border-radius: 50%;
  // Fond dégradé
  background: linear-gradient(135deg, var(--primary), var(--accent));
  // Flexbox
  display: flex;
  align-items: center;
  justify-content: center;
  // Taille de police
  font-size: 1.5rem;
  // Flex shrink
  flex-shrink: 0;
}

// Badge rôle
.role-badge {
  // Couleur
  color: var(--text-muted);
  // Taille
  font-size: 0.85rem;
  // Pas de marge
  margin: 0;
}

// Badge statut
.status-badge {
  // Padding
  padding: 0.4rem 0.8rem;
  // Coins arrondis
  border-radius: 0.5rem;
  // Taille
  font-size: 0.85rem;
  // Poids
  font-weight: 600;
  // Display
  display: inline-block;

  // Actif
  &.status-active {
    background: rgba(var(--success), 0.15);
    color: var(--success);
  }

  // Inactif
  &.status-inactive {
    background: rgba(#64748b, 0.15);
    color: #cbd5e1;
  }

  // En congé
  &.status-on-leave {
    background: rgba(#f59e0b, 0.15);
    color: #fbbf24;
  }
}

// Détails carte
.user-card-details {
  // Flexbox colonne
  display: flex;
  flex-direction: column;
  // Espacement
  gap: 0.75rem;
  // Espacement bas
  margin-bottom: 1.5rem;
}

// Ligne détail
.detail {
  // Flexbox
  display: flex;
  // Espacement
  justify-content: space-between;
  // Aligner
  align-items: center;
  // Taille
  font-size: 0.9rem;

  // Label
  .label {
    // Poids
    font-weight: 600;
    // Couleur
    color: var(--text-muted);
  }
}

// Actions carte
.user-card-actions {
  // Flexbox
  display: flex;
  // Espacement
  gap: 0.5rem;
  // Padding top
  padding-top: 1rem;
  // Bordure top
  border-top: 1px solid var(--border);
}

// ===== ÉTAT VIDE =====
.empty-state {
  // Couvre toutes colonnes
  grid-column: 1 / -1;
  // Centrer
  text-align: center;
  // Padding
  padding: 3rem 2rem;
  // Couleur
  color: var(--text-muted);

  // Paragraphe
  p {
    // Taille
    font-size: 1.1rem;
    // Pas de marge
    margin: 0;
  }
}

// ===== RESPONSIVE =====
@media (max-width: 1024px) {
  // Grille 2 colonnes
  .users-cards {
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  }
}

@media (max-width: 768px) {
  // Container
  .user-create-container {
    padding: 1rem;
  }

  // En-tête
  .section-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;

    h2 {
      font-size: 1.5rem;
    }
  }

  // Grille formulaire
  .form-row {
    grid-template-columns: 1fr;
  }

  // Grille cartes
  .users-cards {
    grid-template-columns: 1fr;
  }

  // Formulaire
  .form-container {
    padding: 1.5rem;
  }

  // Boutons
  .form-actions {
    flex-direction: column-reverse;
    justify-content: flex-end;

    .btn {
      width: 100%;
    }
  }

  // Avatar grid
  .avatar-grid {
    grid-template-columns: repeat(auto-fit, minmax(45px, 1fr));
  }
}

@media (max-width: 480px) {
  // Container
  .user-create-container {
    padding: 0.5rem;
  }

  // Titre
  .section-header h2 {
    font-size: 1.25rem;
  }

  // Carte compacte
  .user-card {
    padding: 1rem;
  }

  // Header carte
  .user-card-header {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
  }

  // Avatar
  .avatar-large {
    width: 40px;
    height: 40px;
    font-size: 1.2rem;
  }

  // Actions empilées
  .user-card-actions {
    flex-direction: column;

    .btn-sm {
      width: 100%;
    }
  }

  // Avatar grid
  .avatar-grid {
    grid-template-columns: repeat(4, 1fr);
  }

  .avatar-btn {
    font-size: 1.5rem;
  }
}
