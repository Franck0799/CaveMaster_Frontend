
// Transitions
$transition-fast: all 0.2s ease;
$transition-normal: all 0.3s ease;
$transition-slow: all 0.5s ease;

// Breakpoints
$mobile: 480px;
$tablet: 768px;
$desktop: 1024px;
$wide: 1280px;

// Z-index
$z-sidebar: 1000;
$z-header: 900;
$z-dropdown: 950;
$z-modal: 2000;
$z-overlay: 1999;

// ===== MIXINS =====
@mixin flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

@mixin flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

@mixin card-style {
  background: var(--card-bg);
  border: 1px solid var(--border);
  color: var(--text);
  border-radius: 1rem;
  padding: 1.5rem;
}

@mixin hover-lift {
  transition: $transition-normal;

  &:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }
}

@mixin scrollbar {
  &::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }

  &::-webkit-scrollbar-track {
    background: var(--darker-bg);
    border-radius: 10px;
  }

  &::-webkit-scrollbar-thumb {
    background: var(--border-color);
    border-radius: 10px;

    &:hover {
      background: color-color-mix(in srgb, in srgb, var(--border-color) 90%, white);
    }
  }
}

// ===== RESET & BASE =====
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

// ===== DASHBOARD LAYOUT =====
.dashboard {
  display: flex;
  min-height: 100vh;
  background: var(--dark-bg); // au lieu de var(--dark-bg)
  color: var(--text);         // au lieu de var(--text)
  position: relative;
}

// ===== OVERLAY MOBILE =====
.mobile-overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: $z-overlay;
  backdrop-filter: blur(4px);

  @media (max-width: $tablet) {
    display: block;
  }
}

// ===== SIDEBAR =====
.sidebar {
  width: 280px;
   background: var(--darker-bg);
  border-right: 1px solid var(--border);
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  overflow-y: auto;
  overflow-x: hidden;
  z-index: $z-sidebar;
  transition: $transition-normal;
  @include scrollbar;

  @media (max-width: $tablet) {
    transform: translateX(-100%);
    box-shadow: 2px 0 20px rgba(0, 0, 0, 0.5);

    &.mobile-open {
      transform: translateX(0);
    }
  }
}

// Header du sidebar
.sidebar-header {
  @include flex-between;
  padding: 1.5rem;
  border-bottom: 1px solid var(--border-color);
  position: sticky;
  top: 0;
  background: var(--sidebar-bg);
  z-index: 10;
}

.logo {
  @include flex-center;
  gap: 0.75rem;
  cursor: pointer;

  &-icon {
    font-size: 2rem;
    animation: pulse 2s ease-in-out infinite;
  }

  &-text {
    font-size: 1.25rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-light), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.mobile-close-btn {
  display: none;
  width: 36px;
  height: 36px;
  @include flex-center;
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 0.5rem;
  color: var(--text-primary);
  font-size: 1.5rem;
  cursor: pointer;
  transition: $transition-fast;

  &:hover {
    background: var(--danger);
    border-color: var(--danger);
    transform: rotate(90deg);
  }

  @media (max-width: $tablet) {
    display: flex;
  }
}

// Navigation
.sidebar-section {
  padding: 1rem 0.75rem;
}

.section-title {
  padding: 0.75rem 1rem;
  font-size: 0.7rem;
  font-weight: 700;
  letter-spacing: 1px;
  color: var(--text-muted);
  text-transform: uppercase;
}

.nav-item {
  display: flex;
  align-items: center;
  gap: 0.875rem;
  padding: 0.875rem 1rem;
  margin-bottom: 0.25rem;
  border-radius: 0.75rem;
  color: var(--text-secondary);
  cursor: pointer;
  transition: $transition-fast;
  position: relative;

  &:hover {
    background: var(--card-bg);
    color: var(--text-primary);
    transform: translateX(4px);
  }

  &.active {
    background: linear-gradient(135deg, rgba(var(--primary), 0.15), rgba(var(--secondary), 0.15));
    color: var(--primary-light);
    font-weight: 600;

    &::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 4px;
      height: 70%;
      background: linear-gradient(180deg, var(--primary), var(--secondary));
      border-radius: 0 4px 4px 0;
    }

    .nav-icon {
      transform: scale(1.1);
    }
  }
}

.nav-icon {
  font-size: 1.25rem;
  transition: $transition-fast;
}

.nav-text {
  flex: 1;
  font-size: 0.95rem;
}

// Sous-menu
.nav-item-with-submenu {
  position: relative;

  .submenu-arrow {
    font-size: 0.65rem;
    transition: $transition-fast;
    color: var(--text-muted);

    &.rotated {
      transform: rotate(90deg);
    }
  }

  &.open {
    background: var(--card-bg);
    color: var(--text-primary);
  }
}

.submenu {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  padding-left: 2.5rem;

  &.open {
    max-height: 600px;
  }
}

.submenu-item {
  padding: 0.75rem 1rem;
  margin-bottom: 0.25rem;
  border-radius: 0.5rem;
  color: var(--text-secondary);
  cursor: pointer;
  font-size: 0.9rem;
  transition: $transition-fast;

  &:hover {
    background: rgba(var(--card-hover), 0.5);
    color: var(--text-primary);
    transform: translateX(4px);
  }

  &.active {
    background: rgba(var(--primary), 0.1);
    color: var(--primary-light);
    font-weight: 500;
  }
}

// Divider
.divider {
  height: 1px;
  background: linear-gradient(90deg,
    transparent,
    var(--border-color),
    transparent
  );
  margin: 0.5rem 0;
}

// RÃ©seaux sociaux
.social-links {
  display: flex;
  gap: 0.75rem;
  padding: 0 1rem;
  flex-wrap: wrap;
}

.social-link {
  width: 40px;
  height: 40px;
  @include flex-center;
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 0.5rem;
  color: var(--text-secondary);
  text-decoration: none;
  transition: $transition-fast;
  font-size: 1.1rem;

  &:hover {
    background: var(--primary);
    border-color: var(--primary);
    color: white;
    transform: translateY(-2px);
  }
}

// Footer du sidebar
.sidebar-footer {
  padding: 1.5rem 1rem;
  margin-top: auto;
  border-top: 1px solid var(--border-color);
  text-align: center;
}

.version-text {
  font-size: 0.75rem;
  color: var(--text-muted);
  margin-bottom: 0.25rem;
}

.copyright-text {
  font-size: 0.7rem;
  color: var(--text-muted);
}

// ===== MAIN CONTENT =====
.main-content {
  flex: 1;
  margin-left: 280px;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  transition: $transition-normal;

  @media (max-width: $tablet) {
    margin-left: 0;
  }
}

// ===== TOP HEADER =====
.top-header {
  @include flex-between;
  gap: 1rem;
  padding: 1rem 2rem;
  background: var(--sidebar-bg);
  border-bottom: 1px solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: $z-header;
  backdrop-filter: blur(10px);

  @media (max-width: $tablet) {
    padding: 1rem;
  }
}

.mobile-menu-btn {
  display: none;
  width: 44px;
  height: 44px;
  @include flex-center;
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 0.75rem;
  color: var(--text-primary);
  font-size: 1.5rem;
  cursor: pointer;
  transition: $transition-fast;

  &:hover {
    background: var(--card-hover);
    transform: scale(1.05);
  }

  @media (max-width: $tablet) {
    display: flex;
  }
}

.header-left {
  flex: 1;
  max-width: 600px;

  @media (max-width: $tablet) {
    max-width: none;
  }
}

.search-bar {
  display: flex;
  align-items: center;
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 0.75rem;
  padding: 0.5rem 1rem;
  gap: 0.75rem;
  transition: $transition-fast;

  &:focus-within {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(var(--primary), 0.1);
  }

  input {
    flex: 1;
    background: none;
    border: none;
    outline: none;
    color: var(--text-primary);
    font-size: 0.95rem;

    &::placeholder {
      color: var(--text-muted);
    }
  }
}

.search-btn {
  background: none;
  border: none;
  cursor: pointer;
  font-size: 1.25rem;
  padding: 0.25rem;
  transition: $transition-fast;

  &:hover {
    transform: scale(1.1);
  }
}

.header-right {
  display: flex;
  align-items: center;
  gap: 1rem;

  @media (max-width: $mobile) {
    gap: 0.5rem;
  }
}

.header-icon {
  position: relative;
  width: 44px;
  height: 44px;
  @include flex-center;
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 0.75rem;
  cursor: pointer;
  transition: $transition-fast;

  &:hover {
    background: var(--card-hover);
    transform: translateY(-2px);
  }

  .icon {
    font-size: 1.25rem;
  }

  .badge {
    position: absolute;
    top: -4px;
    right: -4px;
    min-width: 20px;
    height: 20px;
    @include flex-center;
    background: var(--danger);
    color: white;
    font-size: 0.7rem;
    font-weight: 700;
    border-radius: 10px;
    padding: 0 6px;
    border: 2px solid var(--sidebar-bg);
  }
}

// User Profile Dropdown
.user-profile {
  position: relative;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.5rem 1rem;
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 0.75rem;
  cursor: pointer;
  transition: $transition-fast;

  &:hover {
    background: var(--card-hover);
  }

  @media (max-width: $mobile) {
    padding: 0.5rem;
  }
}

.avatar {
  width: 40px;
  height: 40px;
  @include flex-center;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  border-radius: 50%;
  font-size: 1.25rem;
  flex-shrink: 0;
}

.user-info {
  @media (max-width: $mobile) {
    display: none;
  }
}

.user-name {
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.2;
}

.user-role {
  font-size: 0.75rem;
  color: var(--text-muted);
  line-height: 1.2;
}

.dropdown-arrow {
  font-size: 0.65rem;
  color: var(--text-muted);
  transition: $transition-fast;
  margin-left: auto;

  &.rotated {
    transform: rotate(180deg);
  }

  @media (max-width: $mobile) {
    display: none;
  }
}

.user-dropdown {
  position: absolute;
  top: calc(100% + 0.5rem);
  right: 0;
  min-width: 220px;
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 0.75rem;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10px);
  transition: $transition-fast;
  z-index: $z-dropdown;
  overflow: hidden;

  &.show {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
}

.dropdown-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.875rem 1.25rem;
  color: var(--text-primary);
  cursor: pointer;
  transition: $transition-fast;
  font-size: 0.95rem;

  &:hover {
    background: var(--card-hover);
  }

  &.logout-item {
    color: var(--danger);

    &:hover {
      background: rgba(var(--danger), 0.1);
    }
  }
}

.dropdown-icon {
  font-size: 1.1rem;
}

.dropdown-divider {
  height: 1px;
  background: var(--border-color);
  margin: 0.5rem 0;
}

// ===== CONTENT WRAPPER =====
.content-wrapper {
  flex: 1;
  padding: 2rem;
  min-height: calc(100vh - 140px);

  @media (max-width: $tablet) {
    padding: 1.5rem 1rem;
  }
}

// ===== FOOTER =====
.main-footer {
  padding: 1.5rem 2rem;
  background: var(--sidebar-bg);
  border-top: 1px solid var(--border-color);
  margin-top: auto;

  @media (max-width: $tablet) {
    padding: 1.5rem 1rem;
  }
}

.footer-content {
  @include flex-between;
  gap: 1rem;

  @media (max-width: $tablet) {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
}

.footer-text {
  color: var(--text-muted);
  font-size: 0.875rem;
}

.footer-links {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.footer-link {
  color: var(--text-secondary);
  text-decoration: none;
  font-size: 0.875rem;
  transition: $transition-fast;

  &:hover {
    color: var(--primary-light);
  }
}

.separator {
  color: var(--text-muted);
}

// ===== ANIMATIONS =====
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

// ===== UTILITIES =====
.fade-in {
  animation: fadeIn 0.3s ease;
}

.slide-in-left {
  animation: slideInLeft 0.3s ease;
}

.slide-in-right {
  animation: slideInRight 0.3s ease;
}
