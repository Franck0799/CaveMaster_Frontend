// Category Colors
$colors: (
  'blue': #3b82f6,
  'yellow': #eab308,
  'cyan': #06b6d4,
  'red': #ef4444,
  'green': #22c55e,
  'gray': #6b7280,
  'orange': #fb923c
);

// Transitions
$transition-fast: all 0.15s ease;
$transition-smooth: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
$transition-bounce: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);

// ========================================
// KEYFRAMES ANIMATIONS
// ========================================
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes shimmer {
  0% {
    background-position: -1000px 0;
  }
  100% {
    background-position: 1000px 0;
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

// ========================================
// MIXINS
// ========================================
@mixin glass-effect {
  background: rgba(var(--card-bg), 0.8);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

@mixin card-hover-effect {
  transition: $transition-smooth;
  &:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
  }
}

@mixin button-base {
  padding: 0.875rem 1.75rem;
  border-radius: 0.75rem;
  border: none;
  font-weight: 600;
  cursor: pointer;
  transition: $transition-smooth;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.95rem;
  position: relative;
  overflow: hidden;

  &::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  &:hover::before {
    width: 300px;
    height: 300px;
  }

  &:active {
    transform: scale(0.98);
  }
}

// ========================================
// CONTENEUR PRINCIPAL
// ========================================
.expense-manager-container {
  min-height: 100vh;
  background: var(--dark-bg);
  color: var(--text);
  padding: 2rem;
  animation: fadeInUp 0.5s ease;
}

// ========================================
// HEADER CARD
// ========================================
.header-card {
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 1.5rem;
  padding: 2rem;
  margin-bottom: 2rem;
  animation: fadeInDown 0.6s ease;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  gap: 2rem;
}

.header-title-section {
  flex: 1;
}

.header-title {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  background: linear-gradient(135deg, var(--primary-light), var(--accent));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: slideInRight 0.7s ease;
}

.header-subtitle {
  color: var(--text-muted);
  font-size: 1rem;
  animation: slideInRight 0.8s ease;
}

.header-actions {
  display: flex;
  gap: 1rem;
  align-items: center;
  animation: slideInRight 0.9s ease;
}

// ========================================
// EXPORT MENU
// ========================================
.export-menu-wrapper {
  position: relative;
}

.export-menu {
  position: absolute;
  top: calc(100% + 0.5rem);
  right: 0;
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 0.75rem;
  min-width: 220px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
  z-index: 1000;
  overflow: hidden;
  animation: scaleIn 0.2s ease;

  .menu-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.25rem;
    cursor: pointer;
    transition: $transition-fast;
    background: none;
    border: none;
    width: 100%;
    color: var(--text);
    font-size: 0.95rem;
    position: relative;

    &::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      height: 100%;
      width: 3px;
      background: var(--primary);
      transform: scaleY(0);
      transition: transform 0.3s ease;
    }

    &:hover {
      background: var(--card-hover);
      padding-left: 1.5rem;

      &::before {
        transform: scaleY(1);
      }
    }
  }
}

// ========================================
// BOUTONS
// ========================================
.btn {
  @include button-base;

  &-primary {
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    color: white;

    &:hover {
      background: linear-gradient(135deg, var(--primary-light), var(--primary));
      box-shadow: 0 8px 20px rgba(var(--primary), 0.4);
      transform: translateY(-2px);
    }
  }

  &-secondary {
    background: var(--darker-bg);
    color: var(--text);
    border: 1px solid var(--border);

    &:hover {
      background: var(--card-hover);
      border-color: var(--primary);
      transform: translateY(-2px);
    }
  }

  .icon {
    font-size: 1.2rem;
    animation: pulse 2s infinite;
  }

  .arrow {
    font-size: 0.7rem;
    transition: transform 0.3s ease;
  }
}

// ========================================
// STATS GRID
// ========================================
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1.5rem;
}

.stat-card {
  @include glass-effect;
  border-radius: 1rem;
  padding: 1.5rem;
  transition: $transition-smooth;
  position: relative;
  overflow: hidden;
 // animation: fadeInUp 2s ease backwards;

  @for $i from 1 through 7 {
    &:nth-child(#{$i}) {
      animation-delay: #{$i * 0.5}s;
    }
  }

  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.05),
      transparent
    );
    transition: left 0.5s;
  }

  &:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);

    &::before {
      left: 100%;
    }

    .stat-icon {
      transform: scale(1.15) rotate(5deg);
    }
  }
}

.stat-content {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.stat-icon {
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 1rem;
  flex-shrink: 0;
  transition: $transition-bounce;
  font-size: 2rem;
}

.stat-info {
  flex: 1;
}

.stat-label {
  font-size: 0.85rem;
  color: var(--text-muted);
  margin-bottom: 0.5rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.stat-value {
  font-size: 1.5rem;
  font-weight: 700;
  display: flex;
  align-items: baseline;
  gap: 0.5rem;

  .currency {
    font-size: 0.85rem;
    color: var(--text-muted);
  }
}

// Variantes de couleur
@each $name, $color in $colors {
  .bg-#{$name} {
    background: color-mix(in srgb, var(--color) 15%, transparent);
  }

  .text-#{$name} {
    color: $color;
  }

  .stat-card:has(.bg-#{$name}) {
    border-color: color-mix(in srgb, var(--color) 30%, transparent);

    &:hover {
      border-color: $color;
      background: linear-gradient(135deg, color-mix(in srgb, var(--color) 10%, transparent), var(--darker-bg));
      box-shadow: 0 15px 40px color-mix(in srgb, var(--color) 30%, transparent);
    }
  }
}

.bg-blue-gradient {
  background: linear-gradient(135deg, rgba(#3b82f6, 0.2), rgba(#8b5cf6, 0.2));
}

.text-blue {
  color: var(--primary-light);
}

.stat-card-total {
  border-color: rgba(var(--primary), 0.5);

  &:hover {
    border-color: var(--primary);
    background: linear-gradient(135deg, rgba(var(--primary), 0.15), var(--darker-bg));
    box-shadow: 0 15px 40px rgba(var(--primary), 0.4);
  }
}

// ========================================
// FILTRES
// ========================================
.filters-container {
  display: flex;
  gap: 1rem;
  margin-bottom: 2rem;
  animation: fadeInUp 0.7s ease;
}

.search-box,
.filter-box {
  display: flex;
  align-items: center;
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 0.75rem;
  padding: 0 1rem;
  transition: $transition-smooth;

  .icon {
    font-size: 1.2rem;
    margin-right: 0.75rem;
    opacity: 0.6;
    transition: $transition-fast;
  }

  &:focus-within {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(var(--primary), 0.15);

    .icon {
      opacity: 1;
      animation: pulse 1s ease;
    }
  }
}

.search-box {
  flex: 1;

  input {
    flex: 1;
    padding: 0.875rem 0;
    background: none;
    border: none;
    color: var(--text);
    outline: none;
    font-size: 0.95rem;

    &::placeholder {
      color: var(--text-muted);
    }
  }
}

.filter-box {
  select {
    padding: 0.875rem 2rem 0.875rem 0;
    background: var(--card-bg);
    border: none;
    color: var(--text);
    outline: none;
    font-size: 0.95rem;
    cursor: pointer;
  }
}

// ========================================
// TABLEAU
// ========================================
.table-container {
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 1.5rem;
  overflow: hidden;
  animation: fadeInUp 0.8s ease;
}

.table-wrapper {
  overflow-x: auto;
}

.expenses-table {
  width: 100%;
  border-collapse: collapse;

  thead {
    background: var(--darker-bg);
    border-bottom: 2px solid var(--border);

    th {
      padding: 1.25rem 1.5rem;
      text-align: left;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--text-muted);
      font-weight: 600;
      white-space: nowrap;

      &.text-right {
        text-align: right;
      }

      &.text-center {
        text-align: center;
      }
    }
  }

  tbody {
    tr {
      border-bottom: 1px solid var(--border);
      transition: $transition-fast;
      animation: fadeInUp 0.4s ease backwards;

      @for $i from 1 through 20 {
        &:nth-child(#{$i}) {
          animation-delay: #{$i * 0.05}s;
        }
      }

      &:hover {
        background: var(--card-hover);
        transform: scale(1.01);
      }

      &.editing {
        background: rgba(var(--primary), 0.1);
        border-left: 3px solid var(--primary);
      }
    }

    td {
      padding: 1.25rem 1.5rem;
      font-size: 0.95rem;

      &.text-right {
        text-align: right;
      }

      &.text-secondary {
        color: var(--text-muted);
      }
    }
  }
}

.empty-state {
  td {
    padding: 4rem 2rem !important;
  }
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;

  .empty-icon {
    font-size: 4rem;
    opacity: 0.5;
    animation: pulse 2s infinite;
  }

  .empty-text {
    color: var(--text-muted);
    font-size: 1.1rem;
  }
}

.category-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  font-size: 0.85rem;
  font-weight: 600;
  transition: $transition-fast;

  &:hover {
    transform: scale(1.05);
  }
}

@each $name, $color in $colors {
  .cat-#{$name} {
    background: color-mix(in srgb, var(--color) 20%, transparent);
    color: $color;
  }
}

.amount {
  font-weight: 700;
  color: var(--success);
  font-size: 1.05rem;
}

// ========================================
// ACTIONS
// ========================================
.actions {
  display: flex;
  justify-content: center;
  gap: 0.5rem;
}

.btn-edit,
.btn-delete {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--darker-bg);
  border: 1px solid var(--border);
  border-radius: 0.5rem;
  cursor: pointer;
  transition: $transition-smooth;
  font-size: 1.1rem;

  &:hover {
    transform: scale(1.15) rotate(5deg);
  }
}

.btn-edit:hover {
  background: rgba(var(--info), 0.2);
  border-color: var(--info);
  box-shadow: 0 4px 12px rgba(var(--info), 0.3);
}

.btn-delete:hover {
  background: rgba(var(--danger), 0.2);
  border-color: var(--danger);
  box-shadow: 0 4px 12px rgba(var(--danger), 0.3);
}

// ========================================
// MODAL
// ========================================
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  padding: 2rem;
  animation: fadeInUp 0.3s ease;

  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(8px);
    z-index: -1;
  }
}

