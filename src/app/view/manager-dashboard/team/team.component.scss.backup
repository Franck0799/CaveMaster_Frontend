// ===== VARIABLES SASS =====
// Les variables SASS commencent par $ (dollar) au lieu de --
// Elles sont compilées AVANT que le CSS n'arrive au navigateur
// C'est pour ça qu'elles fonctionnent toujours, même sur de vieux navigateurs

var(--primary): #8b5cf6;           // Couleur principale (violet)
var(--primary-light): #a78bfa;     // Version plus claire du violet
var(--accent): #6366f1;            // Couleur d'accentuation (indigo)
var(--success): #10b981;           // Vert pour les succès
var(--warning): #f59e0b;           // Orange pour les avertissements
var(--danger): #ef4444;            // Rouge pour les dangers
var(--info): #3b82f6;              // Bleu pour les informations
var(--dark-bg): #0a0d1f;           // Fond sombre principal
var(--darker-bg): #060918;         // Fond encore plus sombre
var(--card-bg): #1a1d35;           // Fond des cartes
var(--card-hover): #232947;        // Fond des cartes au survol
var(--text): #e2e8f0;              // Couleur du texte principal
var(--text-muted): #94a3b8;        // Texte atténué (moins visible)
var(--border): #1e293b;            // Couleur des bordures

// ===== RÉINITIALISATION =====
// Le * signifie "tous les éléments"
// On réinitialise les marges et espacements par défaut du navigateur
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box; // La largeur inclut padding et border
}

// ===== STYLES DE BASE =====
body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  // linear-gradient crée un dégradé de couleurs pour le fond
  background: linear-gradient(135deg, #000000 0%, #0a0f1e 50%, #111827 100%);
  color: white;
}

.content-section {
  padding: 2rem;
  max-width: 1400px;
  margin: 0 auto;
  color: var(--text);
}

.section-header {
  margin-bottom: 2rem;
}

.section-title-main {
  font-size: 1.75rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.section-subtitle {
  color: var(--text-muted);
  font-size: 0.95rem;
}

.team-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.team-stat-card {
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 1rem;
  padding: 1.5rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  transition: all 0.3s;

  &:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);
    border-color: var(--primary);
  }

  &.active {
    border-color: var(--success);
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(16, 185, 129, 0.05));
  }
}

.stat-icon {
  font-size: 2.5rem;
  width: 70px;
  height: 70px;
  background: rgba(139, 92, 246, 0.15);
  border-radius: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stat-content {
  flex: 1;
}

.stat-label {
  font-size: 0.85rem;
  color: var(--text-muted);
  margin-bottom: 0.25rem;
}

.stat-value {
  font-size: 2rem;
  font-weight: 700;
  color: var(--text);
}

.team-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5rem;
}

.team-card {
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 1rem;
  overflow: hidden;
  transition: all 0.3s;

  &:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);
    border-color: var(--primary);
  }
}

.team-member-header {
  padding: 1.5rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  border-bottom: 1px solid var(--border);
}

.team-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary), var(--accent));
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.8rem;
  position: relative;
}

.status-indicator {
  position: absolute;
  bottom: 2px;
  right: 2px;
  width: 16px;
  height: 16px;
  border-radius: 50%;
  border: 3px solid var(--card-bg);
}

.status-en-service {
  background: var(--success);
  animation: pulse-green 2s infinite;
}

@keyframes pulse-green {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7);
  }
  50% {
    box-shadow: 0 0 0 6px rgba(16, 185, 129, 0);
  }
}

.status-pause {
  background: var(--warning);
}

.status-pas-service {
  background: var(--text-muted);
}

.status-conge {
  background: var(--info);
}

.team-info {
  flex: 1;
}

.team-name {
  font-size: 1.1rem;
  font-weight: 600;
  margin-bottom: 0.25rem;
}

.team-position {
  font-size: 0.85rem;
  color: var(--text-muted);
}

.team-details {
  padding: 1.5rem;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.75rem 0;
  border-bottom: 1px solid var(--border);

  &:last-child {
    border-bottom: none;
  }
}

.detail-label {
  font-size: 0.9rem;
  color: var(--text-muted);
}

.detail-value {
  font-weight: 600;
  font-size: 0.95rem;
}

.status-badge {
  padding: 0.4rem 0.9rem;
  border-radius: 0.5rem;
  font-size: 0.85rem;
  font-weight: 600;
}

.badge-en-service {
  background: rgba(16, 185, 129, 0.15);
  color: var(--success);
}

.badge-pause {
  background: rgba(245, 158, 11, 0.15);
  color: var(--warning);
}

.badge-pas-service {
  background: rgba(100, 116, 139, 0.15);
  color: var(--text-muted);
}

.badge-conge {
  background: rgba(59, 130, 246, 0.15);
  color: var(--info);
}

@media (max-width: 768px) {
  .team-grid {
    grid-template-columns: 1fr;
  }
}
