// ===== VARIABLES SASS =====
// Les variables SASS commencent par $ (dollar) au lieu de --
// Elles sont compilées AVANT que le CSS n'arrive au navigateur
// C'est pour ça qu'elles fonctionnent toujours, même sur de vieux navigateurs

var(--primary): #8b5cf6;           // Couleur principale (violet)
var(--primary-light): #a78bfa;     // Version plus claire du violet
var(--accent): #6366f1;            // Couleur d'accentuation (indigo)
var(--success): #10b981;           // Vert pour les succès
var(--warning): #f59e0b;           // Orange pour les avertissements
var(--danger): #ef4444;            // Rouge pour les dangers
var(--info): #3b82f6;              // Bleu pour les informations
var(--dark-bg): #0a0d1f;           // Fond sombre principal
var(--darker-bg): #060918;         // Fond encore plus sombre
var(--card-bg): #1a1d35;           // Fond des cartes
var(--card-hover): #232947;        // Fond des cartes au survol
var(--text): #e2e8f0;              // Couleur du texte principal
var(--text-muted): #94a3b8;        // Texte atténué (moins visible)
var(--border): #1e293b;            // Couleur des bordures

// ===== RÉINITIALISATION =====
// Le * signifie "tous les éléments"
// On réinitialise les marges et espacements par défaut du navigateur
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box; // La largeur inclut padding et border
}

// ===== STYLES DE BASE =====
body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  // linear-gradient crée un dégradé de couleurs pour le fond
  background: linear-gradient(135deg, #000000 0%, #0a0f1e 50%, #111827 100%);
  color: white;
}

.content-section {
  padding: 2rem;
  max-width: 1400px;
  margin: 0 auto;
  color: var(--text);
}

.section-header {
  margin-bottom: 2rem;
}

.section-title-main {
  font-size: 1.75rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.section-subtitle {
  color: var(--text-muted);
  font-size: 0.95rem;
}

.orders-container {
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 1rem;
  overflow: hidden;
}

.orders-header {
  padding: 1.5rem;
  border-bottom: 1px solid var(--border);
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 1rem;
}

.orders-tabs {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.order-tab {
  padding: 0.6rem 1.2rem;
  border-radius: 0.5rem;
  border: 1px solid var(--border);
  background: transparent;
  color: var(--text-muted);
  cursor: pointer;
  transition: all 0.3s;
  font-weight: 600;
  font-size: 0.9rem;

  &:hover {
    background: var(--card-hover);
    color: var(--text);
  }

  &.active {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
  }
}

.orders-list {
  max-height: 600px;
  overflow-y: auto;

  &::-webkit-scrollbar {
    width: 6px;
  }

  &::-webkit-scrollbar-thumb {
    background: var(--border);
    border-radius: 3px;
  }
}

.order-item {
  padding: 1.5rem;
  border-bottom: 1px solid var(--border);
  transition: all 0.3s;
  cursor: pointer;

  &:hover {
    background: var(--card-hover);
    padding-left: 2rem;
  }

  &:last-child {
    border-bottom: none;
  }
}

.order-header-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1rem;
}

.order-id {
  font-weight: 700;
  font-size: 1.1rem;
  color: var(--primary-light);
}

.order-status {
  padding: 0.4rem 0.9rem;
  border-radius: 0.5rem;
  font-size: 0.85rem;
  font-weight: 600;
}

.status-paye {
  background: rgba(16, 185, 129, 0.15);
  color: var(--success);
}

.status-en-cours {
  background: rgba(245, 158, 11, 0.15);
  color: var(--warning);
}

.status-termine {
  background: rgba(59, 130, 246, 0.15);
  color: var(--info);
}

.order-details {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 1rem;
  margin-bottom: 1rem;
}

.order-detail-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.9rem;
  color: var(--text-muted);
}

.order-products {
  background: var(--darker-bg);
  padding: 1rem;
  border-radius: 0.5rem;
  font-size: 0.9rem;
  margin-bottom: 1rem;
}

.order-total {
  padding-top: 1rem;
  border-top: 1px solid var(--border);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-label {
  font-weight: 600;
  color: var(--text-muted);
}

.total-amount {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--success);
}

.empty-state {
  text-align: center;
  padding: 3rem;
  color: var(--text-muted);
}

.empty-state-icon {
  font-size: 4rem;
  margin-bottom: 1rem;
  opacity: 0.5;
}

@media (max-width: 768px) {
  .orders-header {
    flex-direction: column;
    align-items: stretch;
  }

  .orders-tabs {
    width: 100%;
  }

  .order-tab {
    flex: 1;
  }
}
