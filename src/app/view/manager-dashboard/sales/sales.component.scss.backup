// ===== VARIABLES SASS =====
// Les variables SASS commencent par $ (dollar) au lieu de --
// Elles sont compilées AVANT que le CSS n'arrive au navigateur
// C'est pour ça qu'elles fonctionnent toujours, même sur de vieux navigateurs

var(--primary): #8b5cf6;           // Couleur principale (violet)
var(--primary-light): #a78bfa;     // Version plus claire du violet
var(--accent): #6366f1;            // Couleur d'accentuation (indigo)
var(--success): #10b981;           // Vert pour les succès
var(--warning): #f59e0b;           // Orange pour les avertissements
var(--danger): #ef4444;            // Rouge pour les dangers
var(--info): #3b82f6;              // Bleu pour les informations
var(--dark-bg): #0a0d1f;           // Fond sombre principal
var(--darker-bg): #060918;         // Fond encore plus sombre
var(--card-bg): #1a1d35;           // Fond des cartes
var(--card-hover): #232947;        // Fond des cartes au survol
var(--text): #e2e8f0;              // Couleur du texte principal
var(--text-muted): #94a3b8;        // Texte atténué (moins visible)
var(--border): #1e293b;            // Couleur des bordures

// ===== RÉINITIALISATION =====
// Le * signifie "tous les éléments"
// On réinitialise les marges et espacements par défaut du navigateur
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box; // La largeur inclut padding et border
}

// ===== STYLES DE BASE =====
body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  // linear-gradient crée un dégradé de couleurs pour le fond
  background: linear-gradient(135deg, #000000 0%, #0a0f1e 50%, #111827 100%);
  color: white;
}

.content-section {
  padding: 2rem;
  max-width: 1400px;
  margin: 0 auto;
  color: var(--text);
}

.section-header {
  margin-bottom: 2rem;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: wrap;
  gap: 1rem;
}

.section-title-main {
  font-size: 1.75rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.section-subtitle {
  color: var(--text-muted);
  font-size: 0.95rem;
}

.header-controls {
  display: flex;
  gap: 1rem;
}

.period-select,
.cave-select {
  padding: 0.75rem 1rem;
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 0.5rem;
  color: var(--text);
  font-size: 0.9rem;
  cursor: pointer;
  transition: all 0.3s;

  &:hover {
    border-color: var(--primary);
  }

  &:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
  }
}

.kpi-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.kpi-card {
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 1rem;
  padding: 1.5rem;
  display: flex;
  align-items: center;
  gap: 1.25rem;
  transition: all 0.3s;

  &:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);
    border-color: var(--primary);
  }
}

.kpi-icon {
  font-size: 2.5rem;
  width: 70px;
  height: 70px;
  background: rgba(139, 92, 246, 0.15);
  border-radius: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.kpi-content {
  flex: 1;
}

.kpi-label {
  font-size: 0.85rem;
  color: var(--text-muted);
  margin-bottom: 0.5rem;
}

.kpi-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text);
  margin-bottom: 0.5rem;
}

.kpi-progress {
  width: 100%;
  height: 6px;
  background: var(--darker-bg);
  border-radius: 3px;
  overflow: hidden;
  margin-bottom: 0.5rem;
}

.kpi-progress-bar {
  height: 100%;
  background: linear-gradient(90deg, var(--success), #14f195);
  border-radius: 3px;
  transition: width 0.5s ease;
}

.kpi-target {
  font-size: 0.75rem;
  color: var(--text-muted);
}

.kpi-change {
  font-size: 0.85rem;
  font-weight: 600;
  padding: 0.25rem 0.75rem;
  border-radius: 0.5rem;
  display: inline-block;

  &.positive {
    background: rgba(16, 185, 129, 0.15);
    color: var(--success);
  }

  &.negative {
    background: rgba(239, 68, 68, 0.15);
    color: var(--danger);
  }
}

.chart-section {
  margin-bottom: 2rem;
}

.chart-card {
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 1rem;
  overflow: hidden;
}

.chart-header {
  padding: 1.5rem;
  border-bottom: 1px solid var(--border);
  display: flex;
  justify-content: space-between;
  align-items: center;

  h3 {
    font-size: 1.1rem;
    font-weight: 600;
  }
}

.chart-legend {
  display: flex;
  gap: 1rem;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.85rem;
  color: var(--text-muted);
}

.legend-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;

  &.primary {
    background: var(--primary);
  }
}

.chart-body {
  padding: 2rem 1.5rem;
}

.bar-chart {
  width: 100%;
  height: 300px;
}

.bar-chart-wrapper {
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  height: 100%;
  gap: 1rem;
}

.bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.bar-tooltip {
  position: absolute;
  top: -30px;
  background: var(--card-hover);
  padding: 0.25rem 0.75rem;
  border-radius: 0.5rem;
  font-size: 0.75rem;
  font-weight: 600;
  white-space: nowrap;
  opacity: 0;
  transition: opacity 0.3s;
}

.bar-item:hover .bar-tooltip {
  opacity: 1;
}

.bar {
  width: 100%;
  background: linear-gradient(180deg, var(--primary), var(--primary-light));
  border-radius: 0.5rem 0.5rem 0 0;
  transition: all 0.3s;
  min-height: 20px;
}

.bar-item:hover .bar {
  background: linear-gradient(180deg, var(--primary-light), var(--primary));
  transform: scaleY(1.05);
}

.bar-label {
  margin-top: 0.75rem;
  font-size: 0.85rem;
  color: var(--text-muted);
  font-weight: 600;
}

.products-section {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.products-card,
.category-card {
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 1rem;
  overflow: hidden;
}

.products-header,
.category-header {
  padding: 1.5rem;
  border-bottom: 1px solid var(--border);
  display: flex;
  justify-content: space-between;
  align-items: center;

  h3 {
    font-size: 1.1rem;
    font-weight: 600;
  }
}

.btn-export {
  padding: 0.5rem 1rem;
  background: rgba(139, 92, 246, 0.15);
  border: 1px solid var(--primary);
  border-radius: 0.5rem;
  color: var(--primary-light);
  cursor: pointer;
  font-weight: 600;
  font-size: 0.85rem;
  transition: all 0.3s;

  &:hover {
    background: var(--primary);
    color: white;
  }
}

.products-body,
.category-body {
  padding: 1.5rem;
}

.products-table {
  width: 100%;
}

.table-header {
  display: grid;
  grid-template-columns: 2fr 1fr 1.5fr 1fr;
  gap: 1rem;
  padding: 0.75rem 1rem;
  background: var(--darker-bg);
  border-radius: 0.5rem;
  margin-bottom: 0.5rem;
  font-weight: 600;
  font-size: 0.85rem;
  color: var(--text-muted);
}

.table-row {
  display: grid;
  grid-template-columns: 2fr 1fr 1.5fr 1fr;
  gap: 1rem;
  padding: 1rem;
  border-bottom: 1px solid var(--border);
  transition: all 0.3s;

  &:hover {
    background: var(--card-hover);
    border-radius: 0.5rem;
  }

  &:last-child {
    border-bottom: none;
  }
}

.table-cell {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.product-rank {
  width: 30px;
  height: 30px;
  background: rgba(139, 92, 246, 0.15);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 0.85rem;
  color: var(--primary-light);
  flex-shrink: 0;
}

.product-name {
  font-weight: 600;
}

.evolution-badge {
  padding: 0.25rem 0.75rem;
  border-radius: 0.5rem;
  font-size: 0.85rem;
  font-weight: 600;

  &.positive {
    background: rgba(16, 185, 129, 0.15);
    color: var(--success);
  }

  &.negative {
    background: rgba(239, 68, 68, 0.15);
    color: var(--danger);
  }
}

.category-item {
  padding: 1rem 0;
  border-bottom: 1px solid var(--border);

  &:last-child {
    border-bottom: none;
  }
}

.category-info {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 0.75rem;
}

.category-icon {
  font-size: 1.5rem;
}

.category-name {
  font-weight: 600;
}

.category-stats {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.category-amount {
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--text);
  min-width: 150px;
}

.category-progress {
  flex: 1;
  height: 6px;
  background: var(--darker-bg);
  border-radius: 3px;
  overflow: hidden;
}

.category-bar {
  height: 100%;
  background: linear-gradient(90deg, var(--primary), var(--primary-light));
  border-radius: 3px;
  transition: width 0.5s ease;
}

.category-percent {
  font-weight: 700;
  color: var(--primary-light);
  min-width: 40px;
  text-align: right;
}

.additional-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
}

.stat-card-small {
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 1rem;
  padding: 1.25rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  transition: all 0.3s;

  &:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
    border-color: var(--primary);
  }
}

.stat-small-icon {
  font-size: 2rem;
  width: 50px;
  height: 50px;
  background: rgba(139, 92, 246, 0.15);
  border-radius: 0.75rem;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.stat-small-content {
  flex: 1;
}

.stat-small-label {
  font-size: 0.85rem;
  color: var(--text-muted);
  margin-bottom: 0.25rem;
}

.stat-small-value {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--text);
}

@media (max-width: 1024px) {
  .products-section {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .kpi-grid,
  .additional-stats {
    grid-template-columns: 1fr;
  }

  .table-header,
  .table-row {
    grid-template-columns: 2fr 1fr 1.5fr 1fr;
    font-size: 0.75rem;
  }

  .header-controls {
    flex-direction: column;
    width: 100%;
  }

  .period-select,
  .cave-select {
    width: 100%;
  }
}
